def interactive_test():
    """Run an interactive test session."""
    print("\n" + "="*60)
    print("INTERACTIVE MODE - Enter 'quit' to exit")
    print("="*60)
    
    while True:
        user_input = input("\n💬 Enter patient's concern: ").strip()
        
